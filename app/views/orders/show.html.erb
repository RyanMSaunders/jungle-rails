<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <h4>Email: <%= @order.email %></h4>
  </div>

  <%= render partial: "line_item", collection: @line_items %>

  <div class="d-flex justify-content-between pt-2">
    <p class="fw-bold mb-0">Order Details</p>
    <p class="text-muted mb-0"><span class="fw-bold me-4">Total</span> <%= humanized_money_with_symbol (@order.total_cents / 100) %></p>
  </div>
  
  <div class="card-footer border-0 px-4 py-5" style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
    <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total paid: <span class="h2 mb-0 ms-2"></span> <%= humanized_money_with_symbol (@order.total_cents / 100) %></span></h5>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
